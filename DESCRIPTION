Package: BAMexploreR
Type: Package
Title: Explore the BAM landbird density models
Version: 0.1.0
Authors@R: c(
    person("Melina", "Houle", email = "houle.melina@gmail.com", role = c("aut", "cre")),
    person("Mannfred", "Boehm", role = "aut"),
    person("Siu Chung", "Wu", role = "ctb"),
